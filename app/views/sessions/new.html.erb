<div class="login">
<%= form_tag "/sessions", {class: 'login-form'} do %>
  <%= label_tag :email %><br/>
  <%= email_field_tag :email %>
  <br/>
  <br/>
  <%= label_tag :password %><br/>
  <%= password_field_tag :password %>
  <br/><br/>
  <%= submit_tag "Log in" %>
<% end %>
</div>
<script type="text/javascript">
  window.onload = function(){
    if (<%= $message != nil %>) {
      sweetAlert("Oops!","<%= $message %>", "error");
    }
  };
</script>
